  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "scripts": {
    "start": "kill-port 9229 &&NODE_PATH=./src node -r ts-node/register src/index.ts ",
    "debug": "NODE_PATH=./src nodemon --watch src --delay 2 --exec node -r ts-node/register --inspect src/index.ts",
    "build": "NODE_ENV=production npx webpack --mode production --progress",
    "test": "jest --runInBand ./src/test/",
    "test:dao": "jest --runInBand ./src/test/dao.test.ts",
    "test:service": "jest --runInBand ./src/test/service.test.ts",
    "test:server": "jest --runInBand ./src/test/server.test.ts",
    "test:auth": "jest --runInBand ./src/test/auth.test.ts",
    "test:filter": "jest --runInBand ./src/test/filter.test.ts",
    "test:limiter": "jest --runInBand ./src/test/limiter.test.ts"
  },
  "dependencies": {
    "escape-html": "^1.0.3",
    "inversify": "^5.0.5",
